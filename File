
mutation OrderCreate {
    orderCreate(
        options: { sendReceipt: false }
        order: {
            customer: { toAssociate: { id: "gid://shopify/Customer/7379231866916" } }
            discountCode: {
                itemPercentageDiscountCode: { code: "FREE25", percentage: 25.0 }
                --- OR ---
                itemFixedDiscountCode: {
                    code: "SHOP100"
                    amountSet: { shopMoney: { amount: "100", currencyCode: EGP } }
                }
            }
            shippingAddress: {
                address1: "Address Line 1"
                address2: "Address Line 2"
                city: "Cairo"
                countryCode: EG
                firstName: "First"
                lastName: "Last"
                phone: "+201010001000"
            }
            name: "Basel"
            currency: EGP
            financialStatus: PAID
            lineItems: [
                {
                    variantId: "gid://shopify/ProductVariant/42322834063396",
                    quantity: 2
                },
                {
                    variantId: "gid://shopify/ProductVariant/42322834882596",
                    quantity: 5
                }
            ],
            options: {
                inventoryBehaviour: DECREMENT_IGNORING_POLICY
                sendReceipt: true
            }
        }
    ) {
        userErrors {
            message
        }
        order {
            currencyCode
            customer {
                email
                id
            }
            discountCodes
            id
            lineItems(first: 100) {
                nodes {
                    quantity
                    variant {
                        id
                        price
                        title
                        product {
                            title
                            featuredImage {
                                url
                            }
                        }
                    }
                    originalTotal
                }
            }
            confirmed
            shippingAddress {
                address1
                address2
                city
                country
                firstName
                lastName
                phone
            }
            totalDiscounts
            totalPrice
        }
    }
}




